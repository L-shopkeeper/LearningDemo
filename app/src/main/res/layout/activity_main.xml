<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_activity_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainActivity"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/data_structure_activity_jump_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="数据结构"
        android:padding="10dp"
        android:background="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/main_activity_name_tv"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/handler_test_activity_jump_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Handler测试"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/main_activity_name_tv"
        app:layout_constraintLeft_toRightOf="@id/data_structure_activity_jump_tv" />

    <TextView
        android:id="@+id/fragment_test_activity_jump_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="fragment测试"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/main_activity_name_tv"
        app:layout_constraintLeft_toRightOf="@id/handler_test_activity_jump_tv" />

    <TextView
        android:id="@+id/sort_algorithm_activity_jump_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="排序算法"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/data_structure_activity_jump_tv"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/okhttp_test_activity_jump_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="OKHttp测试"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/data_structure_activity_jump_tv"
        app:layout_constraintLeft_toRightOf="@id/sort_algorithm_activity_jump_tv" />

    <TextView
        android:id="@+id/broadcast_test_activity_jump_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="broadcast测试"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/data_structure_activity_jump_tv"
        app:layout_constraintLeft_toRightOf="@id/okhttp_test_activity_jump_tv" />

    <TextView
        android:id="@+id/service_test_activity_jump_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="service测试"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/sort_algorithm_activity_jump_tv"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/glide_test_activity_jump_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Glide测试"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/sort_algorithm_activity_jump_tv"
        app:layout_constraintLeft_toRightOf="@id/service_test_activity_jump_tv" />

    <TextView
        android:id="@+id/custom_view_activity_jump_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="自定义View"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/purple_200"
        app:layout_constraintTop_toBottomOf="@id/sort_algorithm_activity_jump_tv"
        app:layout_constraintLeft_toRightOf="@id/glide_test_activity_jump_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>